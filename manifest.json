{
    "name": "Password Nillion Manager",
    "description": "Manages passwords.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"],
            "run_at": "document_end"
        }
    ],
    "permissions": ["storage", "webNavigation", "scripting"],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "action": {
        "default_popup": "popup-passwords.html",
        "default_icon": {
            "128": "pdm.png"
        }
    },
    "icons": {
        "128": "pdm.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    }
}